<%= render 'shared/errors', obj: @user %>

<div class="form-horizontal">
    <%= form_for @user do |f| %>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :username %>
            </div>
            <div class="col-sm-2">
                <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :email %>
            </div>
            <div class="col-sm-2">
                <%= f.email_field :email, class: "form-control", placeholder: "Email adress" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2 control-label">
                <%= f.label :password %>
            </div>
            <div class="col-sm-2">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit @user.new_record? ? "S'inscire" : "Mettre Ã  jour", class:"btn btn-success" %>
            </div>
        </div>
    <% end %>
</div>
